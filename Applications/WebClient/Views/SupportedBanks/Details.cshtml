@model Applications.WebClient.Models.ViewModel.SupportedBankVM

@{
    ViewData["Title"] = "Details supported bank";
}
<h4>Supported bank</h4>

@if (!Model.HasAdminPassword)
{
    @await Html.PartialAsync("_AdminPassword", new Applications.WebClient.Models.ViewModel.AdminPasswordVM(Model.Password, Model.Error, Model.HasAdminPassword));
}
else
{
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>
}

<div>
    <a href="/SupportedBanks/Edit?adminPassword=@(Model.Password)&id=@(Model.Id)">Edit</a> |
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/dataView/State.js"></script>
    <script src="~/js/dataView/dateView.js"></script>
    <script>
        InitializeDataView("", "", "", 0, "@Model.Password");
    </script>
}