@model Applications.WebClient.Models.ViewModel.UpsertWalletVM

@{
    ViewData["Title"] = "Wallets";
}

<h4>Wallets</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="@Model.Wallet.SupportedBankId" class="control-label"></label>
                <select asp-for="@Model.Wallet.SupportedBankId" class="form-control" asp-items="@Model.SupportedBanksSelect">
                    <option value="" selected disabled hidden>ChooseHere</option>
                </select>
                <span asp-validation-for="@Model.Wallet.SupportedBankId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Wallet.FirstName" class="control-label"></label>
                <input asp-for="@Model.Wallet.FirstName" class="form-control" />
                <span asp-validation-for="@Model.Wallet.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Wallet.LastName" class="control-label"></label>
                <input asp-for="@Model.Wallet.LastName" class="form-control" />
                <span asp-validation-for="@Model.Wallet.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Wallet.PostalIndexNumber" class="control-label"></label>
                <input id="postal-index-number" asp-for="@Model.Wallet.PostalIndexNumber" class="form-control" />
                <span id="postal-index-number-error"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Wallet.UniqueMasterCitizenNumber" class="control-label"></label>
                <input id="unique-master-citizen-number" asp-for="@Model.Wallet.UniqueMasterCitizenNumber" class="form-control" />
                <span id="unique-master-citizen-number-error" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="submit-form" value="Create new wallet" class="btn btn-primary" />
            </div>
            <div class="text-danger">
                @ViewData["Error"]
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/walletValidation.js"></script>
    <script>InitializeWalletValidation()</script>
}